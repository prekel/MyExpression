<Window x:Class="MyExpression.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyExpression.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="625">
	<Grid>
		<local:FunctionGraph x:Name="Graph" Margin="300,40,40,40" RenderTransformOrigin="0.5,0.5">
			<local:FunctionGraph.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="-1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
				</TransformGroup>
			</local:FunctionGraph.RenderTransform>
		</local:FunctionGraph>
		<Rectangle Fill="White" HorizontalAlignment="Left" Width="300"/>
		<Rectangle Fill="White"  Height="40" VerticalAlignment="Top" Margin="0,0,0,0"/>
		<Rectangle Fill="White"  Height="40" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
		<Rectangle Fill="White" HorizontalAlignment="Right" Width="40"/>
		<Button x:Name="Button" Content="Axis" HorizontalAlignment="Left" Margin="70,70,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
		<Button x:Name="Button1" Content="Draw" HorizontalAlignment="Left" Margin="70,95,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click"/>
		<TextBox x:Name="OffsetX" HorizontalAlignment="Left" Height="23" Margin="70,120,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="OffsetY" HorizontalAlignment="Left" Height="23" Margin="70,148,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
		<Label Content="OffsetX" HorizontalAlignment="Left" Margin="21,120,0,0" VerticalAlignment="Top" Height="23"/>
		<Label Content="OffsetY" HorizontalAlignment="Left" Margin="21,148,0,0" VerticalAlignment="Top" Height="23"/>
		<TextBox x:Name="ScaleX" HorizontalAlignment="Left" Height="23" Margin="70,190,0,0" TextWrapping="Wrap" Text="40" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="ScaleY" HorizontalAlignment="Left" Height="23" Margin="70,218,0,0" TextWrapping="Wrap" Text="40" VerticalAlignment="Top" Width="120"/>
		<Label Content="ScaleX" HorizontalAlignment="Left" Margin="21,190,0,0" VerticalAlignment="Top" Height="23"/>
		<Label Content="ScaleY" HorizontalAlignment="Left" Margin="21,218,0,0" VerticalAlignment="Top" Height="23"/>
	</Grid>
</Window>
