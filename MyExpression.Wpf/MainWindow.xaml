<Window x:Class="MyExpression.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyExpression.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="625">
	<Grid>
		<local:FunctionGraph x:Name="Graph" Margin="300,40,40,40" RenderTransformOrigin="0.5,0.5">
			<local:FunctionGraph.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="-1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
				</TransformGroup>
			</local:FunctionGraph.RenderTransform>
		</local:FunctionGraph>
		<Button x:Name="Button" Content="Axis" HorizontalAlignment="Left" Margin="72,168,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
		<Button x:Name="Button1" Content="Draw" HorizontalAlignment="Left" Margin="72,193,0,0" VerticalAlignment="Top" Width="75" Click="Button1_Click"/>
		<TextBox x:Name="OffsetX" HorizontalAlignment="Left" Height="23" Margin="50,229,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="OffsetY" HorizontalAlignment="Left" Height="23" Margin="50,257,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
	</Grid>
</Window>
