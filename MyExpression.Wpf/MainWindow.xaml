<Window x:Class="MyExpression.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyExpression.Wpf"
        mc:Ignorable="d"
        Title="MyExpression.Wpf" Height="500" Width="675"
		MinHeight="425" MinWidth="425">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="265*"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="40"/>
			<ColumnDefinition Width="350*"/>
			<ColumnDefinition Width="40"/>
		</Grid.ColumnDefinitions>
		<local:FunctionGraph x:Name="Graph" RenderTransformOrigin="0.5,0.5" SizeChanged="Graph_SizeChanged" Grid.Column="3" Grid.Row="1">
			<local:FunctionGraph.RenderTransform>
				<TransformGroup>
					<ScaleTransform ScaleY="-1" ScaleX="1"/>
					<SkewTransform AngleY="0" AngleX="0"/>
					<RotateTransform Angle="0"/>
				</TransformGroup>
			</local:FunctionGraph.RenderTransform>
		</local:FunctionGraph>
		<Rectangle Fill="White" HorizontalAlignment="Left" Grid.RowSpan="3"/>
		<Rectangle Fill="White" Grid.ColumnSpan="5"/>
		<Rectangle Fill="White" VerticalAlignment="Bottom" Grid.ColumnSpan="5" Grid.Row="2"/>
		<Rectangle Fill="White" HorizontalAlignment="Right" Grid.Column="4" Grid.RowSpan="3"/>
		<Rectangle Fill="White" HorizontalAlignment="Right" Grid.Column="2" Grid.RowSpan="3"/>
		<Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="165,11,0,0" VerticalAlignment="Top" Width="75" Click="ResetButton_Click"/>
		<Button x:Name="DrawButton" Content="Draw" HorizontalAlignment="Left" Margin="165,36,0,0" VerticalAlignment="Top" Width="75" Click="DrawButton_Click" Grid.RowSpan="2"/>
		<TextBox x:Name="OffsetX" HorizontalAlignment="Left" Height="23" Margin="115,23,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<TextBox x:Name="OffsetY" HorizontalAlignment="Left" Height="23" Margin="180,23,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<Label Content="Offset" HorizontalAlignment="Left" Margin="66,23,0,0" VerticalAlignment="Top" Height="28" Width="49" Grid.Row="1"/>
		<TextBox x:Name="ScaleX" HorizontalAlignment="Left" Height="23" Margin="115,51,0,0" TextWrapping="Wrap" Text="40" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<TextBox x:Name="ScaleY" HorizontalAlignment="Left" Height="23" Margin="180,51,0,0" TextWrapping="Wrap" Text="40" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<Label Content="Scale" HorizontalAlignment="Left" Margin="66,51,0,0" VerticalAlignment="Top" Height="28" Width="49" Grid.Row="1"/>
		<TextBox x:Name="Step" HorizontalAlignment="Left" Height="23" Margin="115,79,0,0" TextWrapping="Wrap" Text="1e-2" VerticalAlignment="Top" Width="125" Grid.Row="1"/>
		<Label Content="Step" HorizontalAlignment="Left" Margin="76,79,0,0" VerticalAlignment="Top" Height="28" Width="39" Grid.Row="1"/>
		<TextBox x:Name="CellsStepX" HorizontalAlignment="Left" Height="23" Margin="115,163,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<Label Content="CellsStep" HorizontalAlignment="Left" Margin="51,163,0,0" VerticalAlignment="Top" Height="28" Width="64" Grid.Row="1"/>
		<TextBox x:Name="CellsStepY" HorizontalAlignment="Left" Height="23" Margin="180,163,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="60" Grid.Row="1"/>

		<Label Content="CellsIntervalX" HorizontalAlignment="Left" Margin="29,107,0,0" VerticalAlignment="Top" Height="28" Grid.Row="1"/>
		<TextBox x:Name="CellsIntervalXLeft" HorizontalAlignment="Left" Height="23" Margin="115,107,0,0" TextWrapping="Wrap" Text="-10" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<TextBox x:Name="CellsIntervalXRight" HorizontalAlignment="Left" Height="23" Margin="180,107,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<Label Content="CellsIntervalY" HorizontalAlignment="Left" Margin="29,135,0,0" VerticalAlignment="Top" Height="28" Grid.Row="1"/>
		<TextBox x:Name="CellsIntervalYLeft" HorizontalAlignment="Left" Height="23" Margin="115,135,0,0" TextWrapping="Wrap" Text="-10" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<TextBox x:Name="CellsIntervalYRight" HorizontalAlignment="Left" Height="23" Margin="180,135,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<Label Content="Polynomial/Function" HorizontalAlignment="Left" Margin="-3,191,0,0" VerticalAlignment="Top" Height="28" Width="118" Grid.Row="1"/>
		<TextBox x:Name="Polynomial" HorizontalAlignment="Left" Height="45" Margin="10,219,0,0" TextWrapping="Wrap" Text="x^3-2x^2-x+2" VerticalAlignment="Top" Width="230" Grid.Row="1"/>
		<Label Content="DefinitionArea" HorizontalAlignment="Left" Margin="24,269,0,0" VerticalAlignment="Top" Height="28" Width="91" Grid.Row="1"/>
		<TextBox x:Name="DefinitionAreaLeft" HorizontalAlignment="Left" Height="23" Margin="115,269,0,0" TextWrapping="Wrap" Text="-20" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<TextBox x:Name="DefinitionAreaRight" HorizontalAlignment="Left" Height="23" Margin="180,269,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="60" Grid.Row="1"/>
		<Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="115,194,0,0" VerticalAlignment="Top" Width="60" Click="AddButton_Click" Grid.Row="1"/>
		<Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="180,194,0,0" VerticalAlignment="Top" Width="60" Click="ClearButton_Click" Grid.Row="1"/>
		<Label Content="Count" HorizontalAlignment="Left" Margin="66,33,0,0" VerticalAlignment="Top" Height="28" Width="49" Grid.RowSpan="2"/>
		<Label x:Name="CountLabel" Content="0" HorizontalAlignment="Left" Margin="115,33,0,0" VerticalAlignment="Top" Width="45" Grid.RowSpan="2"/>
		<local:BrushesList x:Name="GraphBrushComboBox" Margin="10,297,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Grid.Row="1"/>
		<Button x:Name="SolveButton" Content="Solve" HorizontalAlignment="Left" Margin="165,297,0,0" VerticalAlignment="Top" Width="75" Click="SolveButton_Click" Grid.Row="1"/>
		<TextBox x:Name="TangentX" HorizontalAlignment="Left" Height="23" Margin="10,360,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="74" Grid.Row="1"/>
		<Label Content="TangentX" HorizontalAlignment="Left" Margin="10,332,0,0" VerticalAlignment="Top" Height="28" Width="74" Grid.Row="1"/>
		<Label Content="TangentLim" HorizontalAlignment="Left" Margin="89,332,0,0" VerticalAlignment="Top" Height="28" Width="71" Grid.Row="1"/>
		<Button x:Name="TangentAddButton" Content="Add Tangent" HorizontalAlignment="Left" Margin="165,335,0,0" VerticalAlignment="Top" Width="75" Click="TangentAddButton_Click" Grid.Row="1"/>
		<TextBox x:Name="TangentLim" HorizontalAlignment="Left" Height="23" Margin="89,360,0,0" TextWrapping="Wrap" Text="1e-4" VerticalAlignment="Top" Width="71" Grid.Row="1"/>
		<GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="4" Grid.RowSpan="3"/>
	</Grid>
</Window>
